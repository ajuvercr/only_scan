<div class="{{lower this.status}} story">
  <div class="edit">
    <button class="button-54" onclick='window.location.href="/scrum/{{this.id}}"'>edit</button>
  </div>
  <form action="/scrum/{{this.id}}/left" method="POST" class="arrow-form">
    <a href="#" onclick="this.parentNode.submit()" class="{{#if (has_status_previous this.status)}}arrow prev{{/if}}">
    </a>
  </form>
  <div class="content">
    <div class="title">
      <img src="{{image this.epic.img_url}}" height="64">
      <h3>
        {{this.title}}
      </h3>
    </div>
    <p>
      {{this.content}}
    </p>
  </div>

  <form action="/scrum/{{this.id}}/right" method="POST" class="arrow-form">
    <a href="#" onclick="this.parentNode.submit()" class="{{#if (has_status_next this.status)}}arrow next{{/if}}"></a>
  </form>
</div>
